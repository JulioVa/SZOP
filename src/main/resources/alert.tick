stream
    |from().measurement('measurements')
        .where("user" = '%%USER%%')
        .where("sensor" = '%%SENSOR%%')
        .where("system" = '%%SYSTEM%%')
    |alert()
        .crit(lambda: "value" %%CONDITION%%)
        .stateChangesOnly(60m)
        .message('%%TITLE%%')
        .details('%%MESSAGE%%')
        .log('/tmp/alerts.log')
        .email('%%EMAIL%%')
